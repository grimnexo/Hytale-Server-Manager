HT_IMAGE=hytale-dedicated:latest
HT_CONTAINER_NAME=
HT_SERVICE_NAME=__SERVICE_NAME__
HOST_PORT=__HOST_PORT__
WORLD_NAME=__WORLD_NAME__

# Optional: download location for server files (zip/tarball)
HT_SERVER_URL=__SERVER_URL__
# Optional: checksum for the downloaded archive (sha256)
HT_SERVER_SHA256=__SERVER_SHA256__
# Optional: use Hytale downloader when HT_SERVER_URL is empty
HT_USE_DOWNLOADER=1
# Optional: patchline for Hytale downloader
HT_DOWNLOADER_PATCHLINE=
# Optional: extra args for Hytale downloader (space-separated)
HT_DOWNLOADER_ARGS=
# Optional: skip downloader self-update check
HT_DOWNLOADER_SKIP_UPDATE_CHECK=0
# Optional: only print the available game version (no download)
HT_DOWNLOADER_PRINT_VERSION=0
# Optional: check if the downloader has an update (no download)
HT_DOWNLOADER_CHECK_UPDATE=0
# Optional: print downloader version (no download)
HT_DOWNLOADER_VERSION=0
# Optional: override downloader output file
HT_DOWNLOADER_DOWNLOAD_PATH=

# Optional: override if your server needs a custom launch command
# Examples:
# HT_SERVER_CMD=./server/HytaleServer --port ${HOST_PORT}
# HT_SERVER_CMD=./server/start-server.sh
HT_SERVER_CMD=

# Optional: Java memory/flags for server start (default: -Xms10G -Xmx10G)
HT_JAVA_OPTS=

# Optional: graceful stop command (sent to server console before container stop)
# Example: HT_STOP_CMD=/stop
HT_STOP_CMD=/stop

# Optional: OAuth device-session tokens (generated via scripts/device-auth.sh)
HYTALE_SERVER_SESSION_TOKEN=
HYTALE_SERVER_IDENTITY_TOKEN=
HYTALE_SERVER_OWNER_UUID=
